{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./types",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES2017",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["dist", "webpack*"]
}
